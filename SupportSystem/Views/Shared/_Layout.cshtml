<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Scripts/styles.css" rel="stylesheet" />
    <link href="~/Scripts/sidebar.css" rel="stylesheet" />
    <link href="~/Content/DX/css/dx.common.css" rel="stylesheet" />
    <link href="~/Content/DX/css/dx.light.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="top-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <img id="logo" alt="logo" src="~/Content/Media/logo.svg" />
                    </div>
                    <div id="logout" class="col-lg-6 col-md-6 hidden-sm hidden-xs">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>


        <div id="wrapper" class="menuDisplayed">

            <!-- Sidebar -->
            <div id="sidebar-wrapper">

                <ul class="sidebar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (HttpContext.Current.User.IsInRole("Admin"))
                    {
                        <li><strong id="adminSec">Admin Section</strong></li>
                        <li>@Html.ActionLink("User Management", "Index", "Users")</li>
                        <li>@Html.ActionLink("System Sections", "Index", "SystemSection")</li>
                        <li>@Html.ActionLink("Support Statuses", "Index", "SystemStatus")</li>
                        <li class="hidden-lg hidden-md">
                            <a id="logoffside" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Page content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        @*<div class="col-lg-12">
                                <a href="#" class="btn btn-success" id="menu-toggle">Toggle Menu</a>
                            </div>*@
                        <div class="col-lg-12">
                            <hr />
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="container-fluid body-content">

                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Support System</p>
                    </footer>

                </div>

            </div>

        </div>










        @*<div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>*@
    }
    else
    {
        @RenderBody()
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/menu.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Content/DX/js/dx.all.js"></script>
    <script src="~/Content/DX/js/knockout-3.4.0.js"></script>
    <script src="~/Content/DX/js/jszip.min.js"></script>
    <script src="~/Content/DX/js/globalize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
</body>
</html>